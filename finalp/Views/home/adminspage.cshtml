@model finalp.Models.viewmodel.adminspagevm
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PetConnect</title>
    <link rel="icon" type="image/x-icon" href="~/assets/logowhtop.png" />

    @* font linki *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,500;0,700;1,300;1,500;1,700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link href="~/css/adoptapet.css" rel="stylesheet" />
</head>
<body>

    @* menu *@

    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="myNav">
        <div class="container px-3 px-lg-6 navbar-header page-scroll ">
            <a class="navbar-brand" href="#page-top"><img class="logo-img" src="~/assets/logowhite.png"></a>
            @* burger *@
            <button class="navbar-toggler navbar-toggler-right" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarResponsive">
                <ul class="navbar-nav ms-auto my-2 my-lg-0">
                    <li class="nav-item "><a class="nav-link" id="link" href="@Url.Action("anasayfa", "home")">Anasayfa</a></li>
                    <li class="nav-item "><a class="nav-link" id="link" href="#about"> Hakkımızda</a></li>
                    <li class="nav-item "><a class="nav-link" id="link" href="#about">İletişim</a></li>
                </ul>
                <ul class="navbar-nav ms-auto my-2 my-lg-0">
                    <li class="nav-item text-light">
                        @ViewBag.User

                        <div>
                            @using (Html.BeginForm())
                            {
                                <input type="submit" value="Çıkış" class="btn btn-secondary " />
                            }
                        </div>
                        
                    </li>
                    
                </ul>
            </div>
        </div>
    </nav>


    @* header *@
    <header class="header">
        <img src="~/assets/dogcat1.jpg" class="img-fluid bgimg" alt="...">
        <div class="overlay">
            <div class="container px-4 px-lg-5 h-100">
                <div class="row gx-4 gx-lg-5 h-100  align-items-center ">
                    <div class="col mt-xxl-5">
                        <h2 id="animated-text" class="txt1">Evcil dostun</h2>
                        <p class="txt">Seni bekliyor!</p>
                    </div>
                </div>
            </div>
        </div>
    </header>


    @* page section-1 *@
    <section class="page-section section1">
        <div class="container">
            <h3> Admin Paneli/ Düzenleme Sayfası</h3>

            <div class="row mt-1">
                <div>
                    @Html.ActionLink("Yeni Bilgi Ekle", "add", "home", null, new { @class = "btn btn-success mt-5 mb-1" })
                </div>
                <div class="col-6">
                    <ol class="list-group list-group-numbered">
                        @foreach (var pet in Model.AdoptList)
                        {
                            <li class="list-group-item d-flex justify-content-between align-items-startm mb-3">
                                <div class="ms-2 me-auto">
                                    <div class="fw-bold">@pet.isim</div>
                                    @pet.tur, @pet.cins, @pet.cinsiyet<br />
                                    <strong> @pet.yas yas </strong>
                                    <p class="fw-italic"> @pet.ozellik</p>
                                </div>
                                <div>
                                    @Html.ActionLink("Düzenle", "Duzenle", "home", new { petid = pet.id }, new { @class = "btn btn-primary btn-sm" })
                                </div>
                                <div>
                                    @Html.ActionLink("Sil", "Sil", "home", new { petid = pet.id }, new { @class = "btn btn-danger btn-sm" })
                                </div>
                            </li>
                        }
                    </ol>
                </div>
                <div>
                    @Html.ActionLink("Kontrol Et", "adoptapet", "home", null, new { @class = "btn btn-success mt-5 mb-1" })
                </div>
                <div class="col-6"></div>
            </div>
        </div>
    </section>


    @* footer *@
    <footer class="py-1 bg-dark">
        <div class="row">
            <div class="col-md-12">
                <div class="footer-bottom" style="margin-top: 20px; text-align: center;">
                    <p style="font-size: 16px; margin-bottom: 0; color: #fff;">&copy; 2023 Tüm Hakları Saklıdır.</p>
                    <div class="social-icons">
                        <a href="#" target="_blank"><i class="fab fa-facebook" style="font-size: 20px; color: #fff;"></i></a>
                        <a href="#" target="_blank"><i class="fab fa-twitter" style="font-size: 20px; color: #fff;"></i></a>
                        <a href="#" target="_blank"><i class="fab fa-instagram" style="font-size: 20px; color: #fff;"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/jscodes/JavaScript.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>
</html>
