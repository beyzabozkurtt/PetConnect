@model List<finalp.Models.tbl_adopt>
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PetConnect</title>
    <link rel="icon" type="image/x-icon" href="~/assets/logowhtop.png" />

    @* font linki *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,500;0,700;1,300;1,500;1,700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link href="~/css/adoptapet.css" rel="stylesheet" />
</head>
<body>

    @* menu *@

    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="myNav">
        <div class="container px-3 px-lg-6 navbar-header page-scroll ">
            <a class="navbar-brand" href="#page-top"><img class="logo-img" src="~/assets/logowhite.png"></a>
            @* burger *@
            <button class="navbar-toggler navbar-toggler-right" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarResponsive">
                <ul class="navbar-nav ms-auto my-2 my-lg-0">
                    <li class="nav-item "><a class="nav-link" id="link" href="@Url.Action("anasayfa", "home")">Anasayfa</a></li>


                    <li class="nav-item "><a class="nav-link" id="link" href="#about">İletişim</a></li>


                </ul>
                @*<ul class="navbar-nav ms-auto my-2 my-lg-0">
                        <li class="nav-item ">
                            <a class="nav-link custom-btn" href="#">Kayıt Ol</a>
                            <a class="nav-link custom-btn-outline" href="#">Giriş Yap</a>
                        </li>
                    </ul>*@


            </div>
        </div>
    </nav>


    @* header *@
    <header class="header">
        <img src="~/assets/dogcat1.jpg" class="img-fluid bgimg" alt="...">
        <div class="overlay">
            <div class="container px-4 px-lg-5 h-100">
                <div class="row gx-4 gx-lg-5 h-100  align-items-center ">
                    <div class="col mt-xxl-5">
                        <h2 id="animated-text" class="txt1">Evcil dostun</h2>
                        <p class="txt">Seni bekliyor!</p>


                    </div>

                </div>
            </div>
        </div>
    </header>


    @* page section-1 *@
    <section class="page-section section1" id="about">

        <div class="container  text-center">


            <div class="row gx-5">

                <div class="col-sm-4">
                    <h2 class="txt3">Adopt a pet</h2>
                    <p class="p1">Hayvan Barınağı olarak, tüm hayvanların yaşama, saygıya ve bakıma layık olduğuna inanıyoruz. Amacımız, kısırlaştırma programları ve eğitim, tıbbi bakım, bakım ve sahiplenmeye odaklanan hizmetler aracılığıyla nüfus kontrolünde sıfır büyüme sağlamaktır.</p> <br />
                    <p class="p1">Her yıl yüzlerce köpek, kedi gibi hayvan birçok sebeple evsiz kalıyor. Misyonumuz, ülke genelinde evsiz hayvanları bulmak ve onlara daha iyi bir hayat sağlamaktır. İnsanlar gibi, onlar da sevgiye, bakıma ve bir ev sahibi olmaya ihtiyaç duyarlar. Onlara sevgi dolu bir yuva ve aile şansı vermek için kuruluşumuzu kurduk. Başarılarımız ilerlemekte ve her yıl yüzlerce evsiz hayvana daha iyi bir hayat sunuyoruz.</p>
                </div>


                <div class="col-sm-8">
                    <div class="container">


                        @* donguyle listeleme *@
                        <div class="row">
                            @foreach (var pet in Model)
                            {
                            <div class="col-sm-4 mb-4">
                                <div class="kutu">
                                    <div class="arka-plan" style="background-image: url('https://livedemo00.template-help.com/wt_61279/images/home3-3-422x260.jpg');">
                                        <div class="overlay1">
                                            <div class="metin">
                                                <h2>@pet.isim</h2>
                                                <h4>@pet.tur</h4>
                                                <h6>@pet.cins</h6>
                                                <p class="p1">@pet.yas yas, @pet.cinsiyet</p>
                                                <p class="p1"><i>@pet.ozellik</i></p>

                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            }
                            

                        
                    

                </div>


                    </div>


                </div>


            </div>
        </div>


    </section>



    @* footer *@
<footer class="bg-dark text-center py-4 mt-5 text-light">
    <p> © 2023 PetConnect Tüm hakları saklıdır.</p>
    <div class="social-icons">
        <a href="#" target="_blank"><i class="fab fa-facebook" style="font-size: 20px; color: #fff;"></i></a>
        <a href="#" target="_blank"><i class="fab fa-twitter" style="font-size: 20px; color: #fff;"></i></a>
        <a href="#" target="_blank"><i class="fab fa-instagram" style="font-size: 20px; color: #fff;"></i></a>
    </div>
</footer>




