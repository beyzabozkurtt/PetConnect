@model finalp.Models.bagislar
<!DOCTYPE html>
<html>
<head>
    <title>Bağış Yapma Sayfası</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-..." crossorigin="anonymous" />
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PetConnect</title>
    <link rel="icon" type="image/x-icon" href="~/assets/logowhtop.png" />


    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,400;0,500;0,700;1,300;1,500;1,700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link href="~/css/adoptapet.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #fff;
        }

        header {
            margin-top: 100px;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .carousel-img {
            height: 400px;
            object-fit: cover;
            border-radius: 10px;
        }

        .donation-intro {
            margin-bottom: 30px;
        }

        .donation-section {
            margin-bottom: 30px;
            text-align: center;
        }

        .btn2 {
            display: inline-block;
            padding: 8px 16px;
            border-radius: 4px;
            background-color: #79cdcd;
            color: #f2f2f2;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

            .btn2:hover {
                text-decoration: underline;
                background-color: #eee5de;
                color: #66cdaa;
            }

        .donation-button {
            margin-top: 30px;
            background-color: #79cdcd;
            color: #f2f2f2;
        }

            .donation-button:hover {
                text-decoration: underline;
                background-color: #eee5de;
                color: #66cdaa;
            }

        .donation-form {
            margin-top: 50px;
        }
    </style>
</head>
<body>



    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="myNav">
        <div class="container px-3 px-lg-6 navbar-header page-scroll ">
            <a class="navbar-brand" href="#page-top"><img class="logo-img" src="~/assets/logowhite.png"></a>

            <button class="navbar-toggler navbar-toggler-right" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse justify-content-center" id="navbarResponsive">
                <ul class="navbar-nav ms-auto my-2 my-lg-0">
                    <li class="nav-item  "><a class="nav-link text-light" id="link" href="@Url.Action("anasayfa", "home")">Anasayfa</a></li>


                    <li class="nav-item  "><a class="nav-link text-light" id="link" href="#about">İletişim</a></li>


                </ul>


            </div>
        </div>
    </nav>



    <header class="text-center py-5 ">
    </header>
    <div class="container mb-5">
        <div class="donation-intro mb-5">
            <h2>PetConnect'e Yapılan Bağışlarla Hayvanlara Destek Olun!</h2>
            <p>
                PetConnect olarak, sokak hayvanlarının yaşam koşullarını iyileştirmek ve sağlık hizmetlerine destek sağlamak için bağışlarınızı bekliyoruz.
                Her bağış, kedi ve köpek kulübelerine mama temin etmek için kullanılmaktadır.
            </p>
        </div>

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="https://images.petlebi.com/v7/ptlb/up/gallery/kopek-yuvasi-nasil-olmali-123.jpg" class="d-block w-100 carousel-img" alt="Kedi Mamaları">
                </div>
                <div class="carousel-item">
                    <img src="https://patigen.com/wp-content/uploads/2021/03/kedi-kopek-mama.jpg" class="d-block w-100 carousel-img" alt="Köpek Mamaları">
                </div>
                <div class="carousel-item">
                    <img src="https://st2.myideasoft.com/idea/hl/38/myassets/products/874/1_min.JPG?revision=1686054940" class="d-block w-100 carousel-img" alt="Mama Hazırlığı">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="donation-section">
            <a href="#donation-form" class="btn btn-primary donation-button">Sen de PetConnect'e Bağış Yap</a>
        </div>
    </div>

    <div class="container">
        <div id="donation-form" class="donation-form">
            <h3 class="text-center">Bağış Yapma Formu</h3>
           
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    <span > İsim </span>
                    @Html.TextBoxFor(model => model.Isim, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.Isim)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Soyisim)
                    @Html.TextBoxFor(model => model.Soyisim, new { @class = "form-control", required = "required" })
                    @Html.ValidationMessageFor(model => model.Soyisim)
                </div>
                <div class="form-group">
                    <span> Açıklama </span>
                    @Html.TextAreaFor(model => model.Aciklama, new { @class = "form-control", rows = "6" })
                    @Html.ValidationMessageFor(model => model.Aciklama)
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Tutar)
                    @Html.TextBoxFor(model => model.Tutar, new { @class = "form-control", type = "number", min = "0", step = "0.01", required = "required" })
                    @Html.ValidationMessageFor(model => model.Tutar)
                </div>
                <div class="form-group">
                    <span> Ödeme </span>
                   
                    @Html.DropDownListFor(model => model.Odeme, new SelectList(new List<SelectListItem>
                {
            new SelectListItem { Text = "Kredi Kartı", Value = "kredi_karti" },
            new SelectListItem { Text = "Banka Havale/EFT", Value = "banka_havale" },
            new SelectListItem { Text = "PayPal", Value = "paypal" }
        }, "Value", "Text"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Odeme)
                </div>
                <div class="form-group">
                    <input type="submit" value="Bağış Yap" class="btn2" />
                </div>
            }

        

        </div>
    
    <footer class="bg-dark text-center py-4 mt-5 text-light">
        <p> © 2023 PetConnect Tüm hakları saklıdır.</p>
        <div class="social-icons">
            <a href="#" target="_blank"><i class="fab fa-facebook" style="font-size: 20px; color: #fff;"></i></a>
            <a href="#" target="_blank"><i class="fab fa-twitter" style="font-size: 20px; color: #fff;"></i></a>
            <a href="#" target="_blank"><i class="fab fa-instagram" style="font-size: 20px; color: #fff;"></i></a>
        </div>
    </footer>
