@model finalp.Models.tbl_adopt

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PetConnect</title>
    <link href="~/css/adoptapet.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<body>

    <h2 class ="mt-5 text-center">Yeni Bilgi Ekleme Sayfasi</h2>
    <div class="container justify-items-center">
        <div class="row">
            <div class="col-4">
                @using (Html.BeginForm())
                {


                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">İsim:</span>
                        @Html.TextBoxFor(x => x.isim, new { @class = "form-control" })
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Tür:</span>
                        @Html.TextBoxFor(x => x.tur, new { @class = "form-control" })
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Yaş:</span>
                        @Html.TextBoxFor(x => x.yas, new { @class = "form-control" })
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Cins:</span>
                        @Html.TextBoxFor(x => x.cins, new { @class = "form-control" })
                    </div>
                    <div class="input-group mb-3">
                        <span class="input-group-text" id="basic-addon1">Cinsiyet:</span>
                        

                        @Html.RadioButtonFor(x => x.cinsiyet, "Erkek") Erkek<br />
                        @Html.RadioButtonFor(x => x.cinsiyet, "Dişi") Dişi<br />

                    </div>
                    <div class="input-group">
                        <span class="input-group-text">Özellikler:</span>

                        @Html.TextAreaFor(x => x.ozellik, new { @class = "form-control" })
                    </div>
                    <div>
                        <input type="submit" value="Kaydet" class="btn btn-primary mt-3" />
                    </div>
                    <div class="mt-3">
                        @if (ViewBag.result != null)
                        {
                            <div class="alert alert-@ViewBag.status" role="alert">
                                @ViewBag.result
                            </div>
                        }

                    </div>

                }
            </div>
            <hr />
            <div>
                @Html.ActionLink("Admin sayfasina git!", "adminspage", "home", null, new { @class = "btn btn-info mb-2" })
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>
</html>