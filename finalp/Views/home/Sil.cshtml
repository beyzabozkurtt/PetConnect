@model finalp.Models.tbl_adopt

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PetConnect</title>
    <link href="~/css/adoptapet.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
</head>
<body>

    <h2 class="mt-5 text-center"> Bilgi Silme Sayfasi</h2>
    <div class="container justify-items-center">
        <div class="row">
            <div class="col-6">

                <div class="input-group mb-3">
                    <strong>Isim:</strong>
                    @Model.isim
                </div>
                <div class="input-group mb-3">
                    <strong>Tür:</strong>
                    @Model.tur
                </div>
                <div class="input-group mb-3">
                    <strong>Yaş:</strong>
                    @Model.yas
                </div>
                <div class="input-group mb-3">
                    <strong>Cins:</strong>
                    @Model.cins
                </div>
                <div class="input-group mb-3">
                    <strong>Cinsiyet:</strong>
                    @Model.cinsiyet
                </div>
                <div class="input-group mb-3">
                    <strong>Özellik:</strong>
                    @Model.ozellik
                </div>
                @using (Html.BeginForm())
                {
                    <div>
                        <input type="submit" value="sil" class="btn btn-danger" />
                    </div>

                }
            </div>
            <div>
                @Html.ActionLink("Admin sayfasina git!", "adminspage", "home", null, new { @class = "btn btn-info mb-2" })
            </div>

        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</body>
</html>